{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "skipLibCheck": true,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@mvcashnode/shared": ["../../packages/shared/dist"],
      "@mvcashnode/shared/*": ["../../packages/shared/dist/*"],
      "@mvcashnode/db": ["../../packages/db/dist"],
      "@mvcashnode/db/*": ["../../packages/db/dist/*"],
      "@mvcashnode/domain": ["../../packages/domain/dist"],
      "@mvcashnode/domain/*": ["../../packages/domain/dist/*"],
      "@mvcashnode/exchange": ["../../packages/exchange/dist"],
      "@mvcashnode/exchange/*": ["../../packages/exchange/dist/*"],
      "@mvcashnode/notifications": ["../../packages/notifications/dist"],
      "@mvcashnode/notifications/*": ["../../packages/notifications/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true
  }
}

